{
	"$schema": "https://unpkg.com/release-it/schema/release-it.json",
	"git": {
		"commitMessage": "chore: release v${version}",
		"tagName": "v${version}",
		"push": true
	},
	"hooks": {
		"before:release": "bun check && bun test"
	},
	"github": {
		"release": true
	},
	"npm": {
		"publish": true
	},
	"plugins": {
		"@release-it/conventional-changelog": {
			"infile": "CHANGELOG.md",
			"preset": "angular"
		}
	}
}
